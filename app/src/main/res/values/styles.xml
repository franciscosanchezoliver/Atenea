<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ServerInputPassword">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:ellipsize">start</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="android:layout_margin">@dimen/margin</item>
        <item name="android:alpha">0.7</item>
        <item name="android:selectAllOnFocus">false</item>
        <item name="android:textColorLink">@color/colorAccent</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/cards</item>
        <item name="android:layout_margin">@dimen/margin</item>
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="android:alpha">0.7</item>
        <item name="android:textColor">@android:color/background_light</item>
    </style>

    <style name="TextLoading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="editTextServerName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="android:layout_marginTop">@dimen/margin</item>
        <item name="android:alpha">0.7</item>
        <item name="android:gravity">center</item>
        <item name="android:selectAllOnFocus">false</item>
        <item name="android:textColorLink">@color/colorAccent</item>
    </style>

    <style name="title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">@dimen/very_big_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="progressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>

    </style>

</resources>
